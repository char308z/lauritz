---
import "../style/gobal.css";
import Button from "./Button.astro";
const {
  titel,
  beskrivelse,
  billede,
  nyproduceret,
  deluxe,

  vurdering,
  bud,
  slut,
  brand,
  artikel,
  showroom,
  variant,
} = Astro.props;
---

<article data-variant={variant}>
  <div class="img_wrapper">
    <div class="">
      {deluxe == true && <div class="banner deluxe">Deluxe</div>}
      {
        nyproduceret == true && (
          <div class="banner nyproduceret">Nyproduceret</div>
        )
      }
    </div>

    <img src={billede} alt="" />
  </div>
  <div class="info_wrapper">
    <p class="artikel">Artikel: {artikel} | Showroom: {showroom}</p>
    <h3>{titel}</h3>
    <p class="brand">{brand}</p>
    <p class="beskrivelse">{beskrivelse}</p>
    <p class="slut">Udløber: {slut}</p>
    <p class="bud">Næste bud:<strong> {bud}</strong></p>
    <p class="vurdering">Vurdering: {vurdering}</p>
  </div>

  <Button />
</article>
