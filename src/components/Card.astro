---
import "../style/global.css";
import Button from "./Button.astro";
const {
  titel,
  beskrivelse,
  billede,
  nyproduceret,
  deluxe,
  vurdering,
  bud,
  slut,
  brand,
  artikel,
  showroom,
  variant,
} = Astro.props;
---

<article data-variant={variant} class="card_wrapper">
  
  <div class="img_wrapper">
    <div class="">
      {deluxe == true && <div class="banner deluxe">Deluxe</div>}
      {
        nyproduceret == true && (
          <div class="banner nyproduceret">Nyproduceret</div>
        )
      }
    </div>

    <img src={billede} alt="" />
  </div>
  <div class="info_wrapper">
    <div class="list_info">
    <p class="artikel">Artikel: {artikel} | Showroom: {showroom}</p>
    <h3>{titel}</h3>
    <p class="brand">{brand}</p>
    <p class="beskrivelse">{beskrivelse}</p></div>
    <div class="list_view">
      <div class="list_switch">
    <p class="bud">Næste bud:<strong> {bud}</strong></p>
    <p class="vurdering">Vurdering: {vurdering}</p>
    <p class="slut">Udløber: {slut}</p></div>
    <Button 
   
   
    /></div>
  </div>

</article>
