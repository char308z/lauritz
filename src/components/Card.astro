<style>
  * {
    margin: 0;
  }

  p {
    color: var(--text-color-primary);
    font-family: var(--font-family-body);
    font-size: var(--font-size-sm);
  }
  .artikel {
    color: var(--text-color-secondary);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-exlight);
  }
  h3 {
    color: var(--text-color-primary);
    font-family: var(--font-family-body);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
  }
  .brand {
    color: var(--text-color-brand);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-light);
  }
  .banner {
    width: fit-content;
    padding: var(--space-3xs) var(--space-l);
    text-align: center;
    text-transform: uppercase;
    font-family: var(--font-family-body);
    font-size: var(--font-size-xs);
    letter-spacing: var(--letter-spacing-double);
    transform: rotate(-45deg) translate(-30%, -20%);
    position: absolute;
  }
  .banner.deluxe.nyproduceret {
    transform: rotate(-45deg) translate(-28%, -36%);
  }

  .deluxe {
    background-color: var(--bg-banner-deluxe);
    color: var(--text-color-banner-deluxe);
  }

  .nyproduceret {
    background-color: var(--bg-banner-nyproduceret);
    color: var(--text-color-banner-nyproduceret);
  }

  .img_wrapper {
    object-fit: cover;
    overflow: hidden;
  }

  article {
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  [data-variant="galleri"] article {
    max-width: 350px;
  }
</style>
